<h1>Editing item</h1>

<% form_for(@item, :url => {:action => "update"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :fuel_point %><br />
    <%= f.text_field :fuel_point %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_item_path(@item) %> |
<%= link_to 'Back', admin_items_path %>