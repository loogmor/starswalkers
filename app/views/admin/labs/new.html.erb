<h1>New lab</h1>

<% form_for(@lab, :url => {:action => "create"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :level %><br />
    <%= f.text_field :level %>
  </p>
  <p>
    <%= f.label :energy %><br />
    <%= f.text_field :energy %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%#= f.text_field :user_id %>
    <%= f.select("user_id", User.all.collect {|u| [ u.username, u.id ] }, { :include_blank => true }) %> 
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_labs_path %>